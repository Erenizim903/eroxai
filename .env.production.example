# Production Environment Configuration for eroxai.org
# Copy this file to .env in production and update the values

# Django Settings
SECRET_KEY=CHANGE-THIS-TO-A-VERY-STRONG-SECRET-KEY-IN-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=eroxai.org,www.eroxai.org,api.eroxai.org

# Database (Production)
DATABASE_NAME=document_translation_db
DATABASE_USER=doc_user
DATABASE_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# OpenAI API
OPENAI_API_KEY=your-openai-key-here

# Google Translate API (Optional Fallback)
GOOGLE_TRANSLATE_API_KEY=YOUR-GOOGLE-TRANSLATE-API-KEY-HERE

# JWT Settings
JWT_SECRET_KEY=CHANGE-THIS-TO-DIFFERENT-SECRET-KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,xlsx,jpg,jpeg,png

# OCR Settings
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng+jpn+tur

# CORS Settings (Production)
CORS_ALLOWED_ORIGINS=https://eroxai.org,https://www.eroxai.org,https://api.eroxai.org

# Email Settings (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@eroxai.org
EMAIL_HOST_PASSWORD=YOUR-EMAIL-PASSWORD

# Frontend URL
FRONTEND_URL=https://eroxai.org

# Storage Settings
STORAGE_TYPE=local
# For AWS S3 (optional):
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=eroxai-documents
# AWS_S3_REGION_NAME=us-east-1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Logging
LOG_LEVEL=INFO

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Domain
DOMAIN=eroxai.org
SITE_NAME=EroxAI Studio
